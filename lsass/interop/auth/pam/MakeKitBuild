make()
{
    PAM_SOURCES="\
       pam-acct.c      \
       pam-auth.c      \
       pam-context.c   \
       pam-conv.c      \
       pam-error.c     \
       pam-globals.c   \
       pam-passwd.c    \
       pam-session.c   \
       pam-notify.c"

    mk_dlo \
	DLO=pam_lsass \
	INSTALLDIR="$PAMDIR" \
	SOURCES="$PAM_SOURCES" \
	INCLUDEDIRS="../include ../../../include" \
	HEADERDEPS="lwmsg/lwmsg.h lwadvapi.h" \
	LIBDEPS="lsaauth pam"
}