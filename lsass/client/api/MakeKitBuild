make()
{
    API_SOURCES="\
	artefacts.c \
	auth.c      \
	clientipc.c \
	config.c    \
	groups.c    \
	logging.c   \
	metrics.c   \
	provider.c  \
	session.c   \
	status.c    \
	tracing.c   \
	users.c     \
	marshal.c   \
	api2.c"

    mk_group \
	GROUP="api.og" \
	SOURCES="$API_SOURCES" \
	INCLUDEDIRS="../../include" \
	HEADERDEPS="lwmsg/lwmsg.h lwadvapi.h" \
	LIBDEPS="lwmsg_nothr lsacommon"
}