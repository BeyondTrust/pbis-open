SUBDIRS="wbclient lwicompat pstore-plugin tools"

configure()
{
    mk_config_header "include/config.h"

    lw_define_feature_macros

    mk_define MOD_EXT "\"$MK_DLO_EXT\""
    mk_define LIBDIR "\"$MK_LIBDIR\""

    MK_CFLAGS="$MK_CFLAGS -Wall -Werror -fno-strict-aliasing"

    mk_multiarch_do
        mk_check_endian

        case "$ENDIANNESS" in
            big) mk_define LW_BIG_ENDIAN;;
            little) mk_define LW_LITTLE_ENDIAN;;
        esac
    mk_multiarch_done
   
    mk_check_headers \
        FAIL=yes \
        reg/lwreg.h lwadvapi.h reg/regutil.h tdb.h

    mk_check_libraries \
        FAIL=yes \
        rsutils regclient lwadvapi lsaclient lwbase_nothr lwnetclientapi tdb

    mk_check_headers \
        unistd.h stdint.h string.h stdbool.h
}
