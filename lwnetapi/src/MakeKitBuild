make()
{
    NETAPI_SOURCES="\
        libmain.c                     \
	globals.c                     \
	net_connection.c              \
	net_memory.c                  \
	net_userinfo.c                \
	net_groupinfo.c               \
	net_memberinfo.c              \
	net_displayinfo.c             \
	net_crypto.c                  \
	net_userenum.c                \
	net_useradd.c                 \
	net_userdel.c                 \
	net_user.c                    \
	net_usergetinfo.c             \
	net_usersetinfo.c             \
	net_usergetlocalgroups.c      \
	net_localgroupenum.c          \
	net_localgroupadd.c           \
	net_localgroupdel.c           \
	net_localgroupgetinfo.c       \
	net_localgroupsetinfo.c       \
	net_localgroupmembers.c       \
	net_localgroupgetmembers.c    \
	net_bufferfree.c              \
	net_userchangepassword.c      \
	net_getdomainname.c           \
	net_getdcname.c               \
	net_joindomain.c              \
	net_unjoindomain.c            \
