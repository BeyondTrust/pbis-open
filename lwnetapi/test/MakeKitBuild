configure()
{
    # Required libraries
    mk_check_libraries \
        FAIL=yes \
        crypto
}
make()
{
    RPCTEST_SOURCES="\
        common.c                      \
        netapitest.c                  \
        params.c                      \
        test_lsa.c                    \
        test_samr.c                   \
        test_netapi.c                 \
        test_netlogon.c               \
        test_dssetup.c                \
        test_wkssvc.c"                \

    mk_program \
        PROGRAM=rpctest \
        SOURCES="$RPCTEST_SOURCES" \
        INSTALLDIR="$LW_TOOL_DIR" \
        INCLUDEDIRS="../include" \
	HEADERDEPS="lw/base.h lwadvapi.h openssl/rand.h lwio/lwio.h dce/rpc.h \
                    lw/rpc/common.h lw/rpc/samr.h lw/rpc/lsa.h lw/rpc/wkssvc.h \
                    lw/rpc/netlogon.h lw/rpc/dssetup.h \
                    lwnet.h ntlm/gssntlm.h ntlm/sspintlm.h lsa/ad.h" \
	LIBDEPS="lwnetclientapi lwioclient lwadvapi lwadvapi_nothr lwbase lwbase_nothr lsarpc dcerpc lwnetapi lsaclient crypto"

    lw_add_tool_target "$result"
}
